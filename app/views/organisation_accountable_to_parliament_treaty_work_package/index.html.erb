<%= render :partial => 'organisation_accountable_to_parliament/intro', :object => @organisation_accountable_to_parliament %>

<div class="reading-width">

	<%= content_tag( 'p', 'All treaty work packages led by this organisation.' ) %>

	<%= list_item_count_sentence( 'work package', @result_count ) %>

	<%= render :partial => 'library_design/feeds/feeds' %>

	<% unless @work_packages.empty? -%>

		<%= render :partial => 'results_per_page_selector', :locals => { :page => @page, :results_per_page => @results_per_page } %>
	
		<ol class="unnumbered">
			<%= render :partial => 'work_package/work_package', :collection => @work_packages %>
		</ol>
	
		<%= render :partial => 'pagination', :locals => { :page => @page, :results_per_page => @results_per_page, :result_count => @result_count } %>
	<% end -%>

	<%= render :partial => 'common/identifier', :object => @organisation_accountable_to_parliament %>
</div>