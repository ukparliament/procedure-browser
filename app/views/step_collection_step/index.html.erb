<%= content_tag( 'p', "House: #{link_to( @step_collection.house_label, house_show_url( :house => @step_collection.house_id ) )}".html_safe ) if @step_collection.house_identifier %>
<%= content_tag( 'p', "Procedure: #{link_to( @step_collection.procedure_label, procedure_show_url( :procedure => @step_collection.procedure_id ) )}".html_safe ) if @step_collection.procedure_identifier %>


<% if @step_collection_steps.empty? %>
	<%= content_tag( 'p', "The '#{@step_collection.label}' step collection is currently empty." ) %>
<% else -%>
	<ol>
		<%= render :partial => 'step/step', :collection => @step_collection_steps %>
	</ol>
<% end -%>

<%= render :partial => 'common/identifier', :object => @step_collection %>