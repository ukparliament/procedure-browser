<%= render :partial => 'step_collection/intro', :object => @step_collection %>

<div class="reading-width">
	<%= list_item_count_sentence( 'work package', @result_count ) %>

	<%= render :partial => 'library_design/feeds/feeds' %>

	<% unless @work_packages.empty? -%>
		<%= render :partial => 'results_per_page_selector_current', :locals => { :page => @page, :results_per_page => @results_per_page } %>
		<ol class="unnumbered">
			<%= render :partial => 'work_package/work_package', :collection => @work_packages, :locals => { 'work_packages' => @work_packages} %>
		</ol>
	
		<%= render :partial => 'pagination_current', :locals => { :page => @page, :results_per_page => @results_per_page, :result_count => @result_count } %>
	<% end -%>

	<%= render :partial => 'common/identifier', :object => @step_collection %>
</div>