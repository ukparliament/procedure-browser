<%= render :partial => 'step/intro', :object => @step %>

<% if @step_work_packageable_things.empty? -%>
	<%= content_tag( 'p', "No papers for step '#{@step.label}' to show yet." ) %>
<% else -%>
	<%= content_tag( 'p', link_to( 'RSS', @rss_url, :class => 'rss' ) ) if @rss_url %>
	<ol>
		<%= render :partial => 'work_packageable_thing', :collection => @step_work_packageable_things %>
	</ol>
<% end -%>
