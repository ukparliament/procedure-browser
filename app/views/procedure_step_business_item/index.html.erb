<%= render :partial => 'procedure/intro', :object => @procedure %>

<div class="reading-width">
	<%= content_tag( 'p', step_houses_and_legislature_label_with_links( @procedure_step ) ) if step_houses_and_legislature_label_with_links( @procedure_step ) %>

	<%= content_tag( 'p', "A step of type #{link_to( @procedure_step.step_type_label, step_type_show_url( :step_type => @procedure_step.step_type_id ) )}.".html_safe ) %>

	<%= content_tag( 'p', @procedure_step.description ) if @procedure_step.description %>

	<%= list_item_count_sentence( 'business item', @procedure_step_business_items.size ) %>

	<%= render :partial => 'library_design/feeds/feeds' %>

	<% unless @procedure_step_business_items.empty? -%>
		<ol class="unnumbered">
			<%= render :partial => 'procedure_step_business_item/business_item', :collection => @procedure_step_business_items %>
		</ol>
	<% end -%>

	<%= render :partial => 'common/identifier', :object => @procedure %>
</div>